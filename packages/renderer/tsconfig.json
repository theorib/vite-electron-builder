{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "sourceMap": false,
    "moduleResolution": "Bundler",
    "skipLibCheck": true,
    "strict": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "types": ["node", "vitest/globals"],
    "baseUrl": ".",
    "paths": {
      "#preload": ["../preload/src/index.ts"],
      "/@/*": ["./src/*"]
      // "@/*": ["./src/*"]
    },
    "lib": ["ESNext", "dom", "dom.iterable"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "types/**/*.d.ts",
    "../../types/**/*.d.ts",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ]
  // "exclude": ["**/*.spec.ts", "**/*.test.ts"]
}
